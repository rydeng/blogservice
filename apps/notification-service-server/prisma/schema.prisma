datasource db {
  provider = "mongodb"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model MessageLog {
  createdAt   DateTime  @default(now())
  event       String?
  eventDetail String?
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  loggedAt    DateTime?
  updatedAt   DateTime  @updatedAt
}

model Notification {
  createdAt           DateTime @default(now())
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  message             String?
  notificationMessage String?
  notificationStatus  String?
  status              String?
  updatedAt           DateTime @updatedAt
  user                String?
  userReference       String?
}
